<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="rootPane" stylesheets="@/style/mainStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.JGG.HVPManagement.controller.workSchedule.ShowErrorsController">
    <center>
      <AnchorPane>
         <children>
            <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <content>
                    <TableView fx:id="tblTable">
                        <columns>
                            <TableColumn fx:id="colErrorType" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="Error type" />
                            <TableColumn fx:id="colDate" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Date" />
                            <TableColumn fx:id="colUser" maxWidth="-1.0" minWidth="50.0" prefWidth="-1.0" text="User" />
                            <TableColumn fx:id="colDesc" maxWidth="1.7976931348623157E308" minWidth="600.0" prefWidth="-1.0" text="Description" />
                        </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                    </TableView>
               </content>
            </ScrollPane>
         </children>
      </AnchorPane>
    </center>
   <top>
      <Label text="Errros prevent from saving. &#13; Warnings doesn't" textAlignment="CENTER" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
