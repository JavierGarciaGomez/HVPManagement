<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="rootPane" alignment="center" hgap="20.0" stylesheets="@../../style/mainStyle.css" vgap="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.JGG.HVPManagement.controller.attendanceControl.RegisterController">
    <columnConstraints>
        <ColumnConstraints prefWidth="130.0" />
        <ColumnConstraints prefWidth="200.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="ALWAYS" />
        <RowConstraints minHeight="10.0" prefHeight="70.0" />
        <RowConstraints minHeight="10.0" prefHeight="45.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints fillHeight="false" />
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label text="User" />
    <Label text="Last register" GridPane.rowIndex="1" />
    <Label text="Next schedule" GridPane.rowIndex="2" />
    <Label text="Status" GridPane.rowIndex="3" />
    <Label text="Branch" GridPane.rowIndex="4" />
    <Label text="Action" GridPane.rowIndex="5" />
    <Label text="Hour" GridPane.rowIndex="6" />
    <Label fx:id="lblUser" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Label" GridPane.columnIndex="1" />
    <Label fx:id="lblLastRegister" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: ffc0cb;" text="Label" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label fx:id="lblNextRegister" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Label" wrapText="true" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS" />
    <Label fx:id="lblStatus" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Label" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <ComboBox fx:id="cboBranch" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <ComboBox fx:id="cboAction" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label fx:id="lblDateHour" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="7">
        <buttons>
            <Button fx:id="btnRegister" mnemonicParsing="false" onAction="#register" text="Register" />
            <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
        </buttons>
    </ButtonBar>
    <ButtonBar buttonMinWidth="0.0" prefHeight="40.0" prefWidth="300.0" GridPane.columnSpan="2" GridPane.rowIndex="8">
        <buttons>
            <Button mnemonicParsing="false" onAction="#changeUser" text="Change user" />
            <Button mnemonicParsing="false" onAction="#reviewRegisters" text="Review" />
            <Button mnemonicParsing="false" onAction="#createAnIncidence" text="Incidence" />
        </buttons>
    </ButtonBar>
    <ButtonBar fx:id="btnBarManager" prefHeight="30.0" prefWidth="260.0" GridPane.columnSpan="2" GridPane.rowIndex="9">
        <buttons>
            <Button mnemonicParsing="false" onAction="#editRegisters" text="Edit" />
            <Button mnemonicParsing="false" onAction="#reviewIncidences" text="Review incidences" />
        </buttons>
    </ButtonBar>
</GridPane>
