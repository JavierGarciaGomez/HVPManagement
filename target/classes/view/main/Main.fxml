<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" stylesheets="@/style/mainStyle.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.JGG.WeeklyScheduler.controller.main.MainController">
    <top>
        
    </top>
    <center>

        <HBox spacing="5">
            <VBox prefWidth="150.0" spacing="5">
                <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#login" text="Login" />
                <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#openAttendanceControl" text="Attendance control" />
                <Button maxWidth="Infinity" mnemonicParsing="false" text="Payroll" />
                <Button maxWidth="Infinity" mnemonicParsing="false" text="Comissions" />
            </VBox>
            <VBox prefWidth="150.0" spacing="5">
                <Button maxWidth="Infinity" mnemonicParsing="false" text="Manage users" />
                <Button maxWidth="Infinity" mnemonicParsing="false" text="Schedule" />
                <Button maxWidth="Infinity" mnemonicParsing="false" text="Services" />
                <Button maxWidth="Infinity" mnemonicParsing="false" text="Desk Account" />
            </VBox>
        </HBox>
    </center>
   <top>
      <GridPane prefHeight="100.0" prefWidth="300.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        </columnConstraints>
         <children>
            <Label fx:id="txtUserName" text="User not logged in" />
            <ImageView fx:id="imageView" fitHeight="100.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
         </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
      </GridPane>
   </top>
</BorderPane>
