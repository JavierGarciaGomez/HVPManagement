<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" stylesheets="@../../style/mainStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.JGG.HVPManagement.controller.configuration.ManageGroupController">
    <center>
        <TableView fx:id="tblTable">
            <columns>
                <TableColumn fx:id="colId" text="Id" />
                <TableColumn fx:id="colName" prefWidth="100.0" text="Name" />
                <TableColumn fx:id="colDesc" prefWidth="400.0" text="Description" />
            </columns>
        </TableView>
    </center>
    <left>
        <VBox fx:id="panVboxLeft" prefHeight="200.0" prefWidth="125.0" spacing="8.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Id" />
            <TextField fx:id="txtId" />
         <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Name" />
         <TextField fx:id="txtName" />
         <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Description" />
         <TextField fx:id="txtDesc" />
            <Button fx:id="btnSave" contentDisplay="CENTER" maxWidth="1.75E308" mnemonicParsing="false" onAction="#save" text="Save" />
            <Button fx:id="btnAddNew" contentDisplay="CENTER" maxWidth="1.75E308" mnemonicParsing="false" onAction="#addNew" text="Add new" />
            <Button fx:id="btnDelete" contentDisplay="CENTER" maxWidth="1.75E308" mnemonicParsing="false" onAction="#delete" text="Delete" />
            <Button fx:id="btnCancelAdd" contentDisplay="CENTER" maxWidth="1.75E308" mnemonicParsing="false" onAction="#cancelAdd" text="Cancel add" />
         <Label fx:id="lblRegistersMissing" alignment="CENTER" maxWidth="1.7976931348623157E308" />
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
        </VBox>
    </left>
</BorderPane>
