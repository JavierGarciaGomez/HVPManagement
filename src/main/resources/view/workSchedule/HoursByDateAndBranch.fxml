<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="rootPane" stylesheets="@/style/mainStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.JGG.HVPManagement.controller.workSchedule.HoursByDateAndBranchController">
    <center>
      <AnchorPane>
         <children>
            <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <content>
                    <TableView fx:id="tblTable">
                        <columns>
                            <TableColumn fx:id="colBranch" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Branch" />
                            <TableColumn fx:id="colDate" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Day" />
                            <TableColumn fx:id="colHours" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Hours" />
                        </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                    </TableView>
               </content>
            </ScrollPane>
         </children>
      </AnchorPane>
    </center>
   <top>
      <Label maxWidth="300.0" text="Be aware that the day with most services is saturday in Urban with 24 per day.  Monday, Tuesday, and Sunday have 19; and Wednesday and Thursday are the lowest with 18.&#13; In Harbor the most popular is saturday with 11; sunday with 10; and the rest have an average of 8." textAlignment="CENTER" wrapText="true" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
