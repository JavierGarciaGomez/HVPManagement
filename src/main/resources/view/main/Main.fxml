<BorderPane fx:id="rootPane" stylesheets="@../../style/mainStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.JGG.HVPManagement.controller.main.MainController">
    <top>
        
    </top>
    <center>

        <HBox spacing="5">
            <VBox prefWidth="180.0" spacing="5">
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showLogin" text="Login">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icon/loginIcon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showWorkSchedule" text="Work schedule">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icon/workScheduleIcon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showAttendanceControl" text="Attendance control">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icon/attendanceIcon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Payroll">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icon/payrollIcon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Commissions">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icon/comissionsIcon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            </VBox>
            <VBox prefWidth="180.0" spacing="5">
                <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#showManageUser" text="Manage users">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icon/manageUsersIcon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
                <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#showSchedule" text="Schedule">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icon/appointmentIcon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
                <Button maxWidth="Infinity" mnemonicParsing="false" text="Services">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icon/servicesIcon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
                <Button maxWidth="Infinity" mnemonicParsing="false" text="Desk Account">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icon/deskIcon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#showConfiguration" text="Configurations">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icon/configurationIcon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            </VBox>
        </HBox>
    </center>
   <top>
      <GridPane prefHeight="100.0" prefWidth="300.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" />
        </columnConstraints>
         <children>
            <Label id="userLogin" fx:id="txtUserName" alignment="CENTER" maxWidth="1.7976931348623157E308" text="User not logged in" textAlignment="CENTER" />
            <ImageView fx:id="imageView" fitHeight="100.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
         </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </GridPane>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
