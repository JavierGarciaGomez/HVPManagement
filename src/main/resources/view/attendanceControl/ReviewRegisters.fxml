<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.JGG.HVPManagement.controller.attendanceControl.ReviewRegistersController">
    <center>
        <TableView fx:id="tblTable" prefWidth="600">
            <columns>
                <TableColumn fx:id="colId" prefWidth="${tblTable.width*0.15}" text="Id" />
            <TableColumn fx:id="colCollaborator" prefWidth="75.0" text="Collaborator" />
            <TableColumn fx:id="colBranch" prefWidth="75.0" text="Branch" />
                <TableColumn fx:id="colDate" prefWidth="${tblTable.width*0.3}" style="-fx-alignment: CENTER;" text="Date" />
                <TableColumn fx:id="colAction" prefWidth="${tblTable.width*0.1}" text="Action" />
                <TableColumn fx:id="colStatus" prefWidth="${tblTable.width*0.2}" text="Status" />
            <TableColumn fx:id="colMinutesLate" prefWidth="75.0" text="MinutesLate" />
            </columns>
        </TableView>
    </center>
   <top>
      <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" spacing="40.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefWidth="100.0" spacing="15.0">
               <children>
                  <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Starting date" />
                  <DatePicker fx:id="dtpStart" onAction="#filterByDate" />
               </children>
            </VBox>
            <VBox prefWidth="100.0" spacing="15.0">
               <children>
                  <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Ending date" />
                  <DatePicker fx:id="dtpEnd" onAction="#filterByDate" />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#showIncidences" text="Incidences" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
